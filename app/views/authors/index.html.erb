<h1>Listing authors</h1>

<table>
  <tr>
    <th>Authorname</th>
    <th>Department</th>
    <th>Class name</th>
    <th>Mail</th>
    <th>Phone</th>
    <th>Stunum</th>
    <th>Grade</th>
    <th>Credit</th>
    <th>User</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @authors.each do |author| %>
  <tr>
    <td><%= author.authorname %></td>
    <td><%= author.department %></td>
    <td><%= author.class_name %></td>
    <td><%= author.mail %></td>
    <td><%= author.phone %></td>
    <td><%= author.stunum %></td>
    <td><%= author.grade %></td>
    <td><%= author.credit %></td>
    <td><%= author.user_id %></td>
    <td><%= author.project_id %></td>
    <td><%= link_to 'Show', author %></td>
    <td><%= link_to 'Edit', edit_author_path(author) %></td>
    <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

